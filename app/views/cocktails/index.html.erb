<h1>Which Cocktail to Do?</h1>
<div class="container">
  <div class="row box">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <% @cocktails.each do |cocktail| %>
        <h2><%= cocktail.name %></h2>
        <%= link_to "see details", cocktail_path(cocktail), class: "btn btn-success" %>
      <% end %>
   </div>
   <div class="row box">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <%= link_to "Add a new Cocktail", new_cocktail_path, class: "btn btn-success" %>
    </div>
    </div>
  </div>
</div>

